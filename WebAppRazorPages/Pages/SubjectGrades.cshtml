@page
@model WebAppRazorPages.Pages.SubjectGradesModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Средние оценки по предметам</title>
    <!-- Подключение Bootstrap -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Дополнительные стили */
        body {
            padding: 20px;
        }

        h1 {
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Оценки по предметам</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Предмет</th>
                    <th>Оценка</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var subjectGrade in Model.SubjectGrades)
                {
                    <tr>
                        <td>@subjectGrade.SubjectName</td>
                        <td>@subjectGrade.AverageGrade</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>